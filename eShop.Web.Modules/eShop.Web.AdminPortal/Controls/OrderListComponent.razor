@if (Orders != null && Orders.Count() > 0) 
{
<table class="table">
    <thead>
        <tr>
            <th>Order Status</th>
            <th>Date Placed </th>
            <th>Customer Name</th>
            <th>Address</th>
            <th>State / Province</th>
            <th>City </th>
            <th>Country</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var order in Orders)
       {
           <OrderItemComponent Order="order"></OrderItemComponent>
       }
    </tbody>
    
</table>

}

@code {
    [Parameter]
    public IEnumerable<Order> Orders{ get; set; }

}
